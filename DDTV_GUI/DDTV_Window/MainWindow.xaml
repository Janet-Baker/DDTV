                                <GridView>
                                    <GridViewColumn Header="昵称" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                    <GridViewColumn Header="状态" Width="80" DisplayMemberBinding="{Binding State}"/>
                                    <GridViewColumn Header="开播提醒" Width="90" DisplayMemberBinding="{Binding IsRemind}"/>
                                    <GridViewColumn Header="自动录制" Width="90" DisplayMemberBinding="{Binding IsRec}"/>
                                    <GridViewColumn Header="录制弹幕" Width="90" DisplayMemberBinding="{Binding IsDanmu}"/>
                                    <GridViewColumn Header="房间号" Width="100" DisplayMemberBinding="{Binding RoomId}"/>
                                    <GridViewColumn Header="标题" Width="170" DisplayMemberBinding="{Binding Title}"/>
                                </GridView>

                            </ListView.View>
                            <ListView.ContextMenu>
                                <ContextMenu Width="160">
                                    <MenuItem Header="在DDTV中观看" Click="LiveList_MenuItem_Play_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/alert.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="只看弹幕" Click="OpenSeparateDanMuWindow_MenuItem_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/DanMu.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="打开直播间" Click="LiveList_MenuItem_OpenLiveRoomUrl_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/View.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="手动启动一次录制" Click="LiveList_MenuItem_ManualRec_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/Once.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="设置开播提醒" Click="LiveList_MenuItem_SetIsRemind_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/alert.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="设置自动录制" Click="LiveList_MenuItem_SetIsRec_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/video.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="设置录制弹幕" Click="LiveList_MenuItem_SetIsDanmu_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/message.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="删除房间" Click="LiveList_MenuItem_DelRoom_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/delete.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="增加房间" Click="LiveList_MenuItem_AddRoom_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/add_user.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="打开临时监控窗" Click="LiveList_MenuItem_Peep_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/Peep.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator />
                                    <MenuItem Header="在列表中搜索" Click="LiveList_MenuItem_Search_Click">
                                        <MenuItem.Icon>
                                            <Image Source="/Resources/Img/UI/Search.png" Width="18" Height="18"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </ListView.ContextMenu>
                            <hc:AdornerElement.Instance>
                                <hc:Poptip Content="增删改等更多功能在鼠标右键菜单中，Ctrl+F或右键菜单可以搜索列表" PlacementType="BottomLeft"/>
                            </hc:AdornerElement.Instance>
                        </ListView>
                        <Button Name="ForceRefreshLiveBroadcastList" Content="重置列表" Margin="785,21,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="ForceRefreshLiveBroadcastList_Click">
                            <hc:AdornerElement.Instance>
                                <hc:Poptip Content="点击后会强制刷新该列表(请在该列表卡住的情况下再点击)" PlacementType="BottomLeft"/>
                            </hc:AdornerElement.Instance>
                        </Button>
                    </Grid>

                </TabItem>
                <TabItem Header="录制任务">
                    <ListView x:Name="RecList" Margin="10" Width="auto" Background="#7FEEEEEE" BorderBrush="#7FE0E0E0" d:ItemsSource="{d:SampleData ItemCount=5}" ContextMenuOpening="RecList_ContextMenuOpening" ContextMenuClosing="RecList_ContextMenuClosing"  >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="名称" Width="120" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="房间号" Width="90" DisplayMemberBinding="{Binding RoomId}"/>
                                <GridViewColumn Header="已下载大小" Width="110" DisplayMemberBinding="{Binding DownSzie}"/>
                                <GridViewColumn Header="开始时间" Width="120" DisplayMemberBinding="{Binding StartTime}"/>
                                <GridViewColumn Header="下载速度" Width="80" DisplayMemberBinding="{Binding DownloadSpe}"/>
                                <GridViewColumn Header="标题" Width="150" DisplayMemberBinding="{Binding Title}"/>
                                <GridViewColumn Header="CDN_Host" Width="150" DisplayMemberBinding="{Binding Cdn_Host}"/>
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu Width="150">
                                <MenuItem Header="激光切片" Click="RecList_MenuItem_Clip_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/Img/UI/box_plot.png" Width="18" Height="18"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator />
                                <MenuItem Header="复制路径" Click="RecList_CopyFolderPath_MenuItem_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/Img/UI/folder-open.png" Width="18" Height="18"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="打开直播间" Click="RecLive_MenuItem_OpenLiveRoomUrl_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/Img/UI/View.png" Width="18" Height="18"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator />
                                <MenuItem Header="取消录制" Click="RecLive_MenuItem_Cancel_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/Img/UI/stop.png" Width="18" Height="18"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <hc:AdornerElement.Instance>
                            <hc:Poptip Content="高级功能在鼠标右键菜单中" PlacementType="BottomLeft"/>
                        </hc:AdornerElement.Instance>
                    </ListView>
                </TabItem>
                <TabItem Header="完成记录">
                    <ListView x:Name="OverList" Margin="10" Width="auto" Background="#7FEEEEEE" BorderBrush="#7FE0E0E0" d:ItemsSource="{d:SampleData ItemCount=5}" ContextMenuOpening="OverList_ContextMenuOpening" ContextMenuClosing="OverList_ContextMenuClosing"  >
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="名称" Width="120" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="房间号" Width="90" DisplayMemberBinding="{Binding RoomId}"/>
                                <GridViewColumn Header="已下载大小" Width="100" DisplayMemberBinding="{Binding DownSzie}"/>
                                <GridViewColumn Header="开始时间" Width="120" DisplayMemberBinding="{Binding StartTime}"/>
                                <GridViewColumn Header="结束时间" Width="120" DisplayMemberBinding="{Binding EndTime}"/>
                                <GridViewColumn Header="标题" Width="270" DisplayMemberBinding="{Binding Title}"/>
                            </GridView>
                        </ListView.View>
                        <ListView.ContextMenu>
                            <ContextMenu Width="150">
                                <MenuItem Header="复制路径" Click="OverList_CopyFolderPath_MenuItem_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/Img/UI/folder-open.png" Width="18" Height="18"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <!--<MenuItem Header="播放视频" Click="OverList_Play_MenuItem_Click">
                                    <MenuItem.Icon>
                                        <Image Source="/Resources/Img/UI/play-circle.png" Width="18" Height="18"/>
                                    </MenuItem.Icon>
                                </MenuItem>-->
                            </ContextMenu>
                        </ListView.ContextMenu>
                        <hc:AdornerElement.Instance>
                            <hc:Poptip Content="更多功能在鼠标右键菜单中" PlacementType="BottomLeft"/>
                        </hc:AdornerElement.Instance>
                    </ListView>
                </TabItem>
                <TabItem Header="其他功能">
                    <Grid Margin="20,10,10,10" Background="#4C797979">
                        <ScrollViewer>
                            <WrapPanel Orientation="Horizontal">
                                <Grid Width="630" Margin="5">
                                    <TextBlock HorizontalAlignment="Left" Margin="5" Text="匹配导入关注列表中的V：" Style="{StaticResource TextBlockSubTitle}" VerticalAlignment="Center"/>
                                    <Button Content="导入" Margin="191,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_ImportVTB">
                                        <hc:AdornerElement.Instance>
                                            <hc:Poptip Content="该功能基于缓存VTBS的数据与登陆账号的关注列表交叉比对，可能会有缺少" PlacementType="BottomLeft"/>
                                        </hc:AdornerElement.Instance>
                                    </Button>
                                    <TextBlock Name="ImportVTBButton" HorizontalAlignment="Left" Margin="242,3,0,0" Text="" Style="{StaticResource TextBlockSubTitle}" VerticalAlignment="Top"/>
                                </Grid>
                                <Grid Width="630" Margin="5">
                                    <TextBlock HorizontalAlignment="Left" Margin="5" Text="匹配导入关注列表中所有直播间：" Style="{StaticResource TextBlockSubTitle}" VerticalAlignment="Center"/>
                                    <Button Content="导入" Margin="245,0,0,0" HorizontalAlignment="Left" Click="Button_ImportALL"/>
                                    <TextBlock Name="ImportAllButton" HorizontalAlignment="Left" Margin="300,3,0,0" Text="" Style="{StaticResource TextBlockSubTitle}" VerticalAlignment="Top"/>
                                </Grid>
                                <Grid Width="825"  Margin="5">
                                    <TextBlock HorizontalAlignment="Left" Margin="5" Text="对文件进行手动修复/转码：" Style="{StaticResource TextBlockSubTitle}" VerticalAlignment="Center"/>
                                    <Button Name="TranscodingSelectFilesManual" Content="选择文件" Margin="200,2,0,0" HorizontalAlignment="Left" Click="Button_TranscodingSelectFilesManual" VerticalAlignment="Top">
                                        <hc:AdornerElement.Instance>
                                            <hc:Poptip Content="点击按钮，选择文件后会进行修复/转码操作" PlacementType="BottomLeft"/>
                                        </hc:AdornerElement.Instance>
                                    </Button>
                                    <TextBlock Name="ManualTranscodingProgress" HorizontalAlignment="Left" Margin="285,0,0,0" Text="" Style="{StaticResource TextBlockSubTitle}" Width="540"/>
                                </Grid>
                                <Grid Width="825"  Margin="5">
                                    <TextBlock HorizontalAlignment="Left" Margin="5" Text="对录制的弹幕xml文件手动转换为ass文件：" Style="{StaticResource TextBlockSubTitle}" VerticalAlignment="Center"/>
                                    <Button Name="AssFile_SelectFilesManual" Content="选择文件" Margin="308,0,0,0" HorizontalAlignment="Left" Click="AssFile_SelectFilesManual_Click"  VerticalAlignment="Top">
                                        <hc:AdornerElement.Instance>
                                            <hc:Poptip Content="点击按钮，选择文件后会进行转换操作" PlacementType="BottomLeft"/>
                                        </hc:AdornerElement.Instance>
                                    </Button>
                                </Grid>
                                <!--<Grid Width="825"  Margin="5">
                                    <TextBlock HorizontalAlignment="Left" Margin="5" Text="打开弹幕浮窗：" Style="{StaticResource TextBlockSubTitle}" VerticalAlignment="Center"/>
                                    <Button Name="DanMuWindowButton" Tag="0"  Content="选择文件" Margin="117,2,0,0" HorizontalAlignment="Left" Click="DanMuWindowButton_Click" VerticalAlignment="Top">
                                        <hc:AdornerElement.Instance>
                                            <hc:Poptip Content="点击按钮，选择文件后会自动进行转码操作" PlacementType="BottomLeft"/>
                                        </hc:AdornerElement.Instance>
                                    </Button>
                                </Grid>-->
                            </WrapPanel>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="设置">
                    <Grid>
                        <Grid Margin="6,6,6,6" Background="#4C797979">
                            <ScrollViewer>
                                <WrapPanel Orientation="Horizontal">
                                    <Grid Width="850">
                                        <TextBlock HorizontalAlignment="Left" Margin="5" Text="缩小后隐藏到托盘" Style="{StaticResource TextBlockSubTitle}" VerticalAlignment="Center"/>
                                        <ToggleButton x:Name="HideIcon" Style="{StaticResource ToggleButtonSwitch}" Margin="138,6,0,4" Click="HideIcon_Click" HorizontalAlignment="Left" Width="36">
                                            <hc:AdornerElement.Instance>
                                                <hc:Poptip Content="打开开关后，缩小DDTV窗口回从任务栏中消失、隐藏到角落后台托盘中，双击托盘中的ico恢复到任务栏" PlacementType="BottomLeft"/>
                                            </hc:AdornerElement.Instance>
                                        </ToggleButton>
                                        <TextBlock HorizontalAlignment="Left" Margin="204,0,0,0" Text="阻止系统休眠" Style="{StaticResource TextBlockSubTitle}"/>
                                        <ToggleButton x:Name="DoNotSleepWhileDownloadingIcon" Style="{StaticResource ToggleButtonSwitch}" Margin="305,5,0,5" Click="DoNotSleepWhileDownloadingIcon_Click" HorizontalAlignment="Left" Width="36">
                                            <hc:AdornerElement.Instance>
                                                <hc:Poptip Content="打开后会阻止系统进入休眠模式（不阻止屏幕休眠）防止录制任务失败，关闭本设置或者退出DDTV后恢复" PlacementType="BottomLeft"/>
                                            </hc:AdornerElement.Instance>
                                        </ToggleButton>
                                        <TextBlock HorizontalAlignment="Left" Margin="375,0,0,0" Text="检测剩余空间并警告" Style="{StaticResource TextBlockSubTitle}"/>
                                        <ToggleButton x:Name="SpaceIsInsufficientWarn" Style="{StaticResource ToggleButtonSwitch}" Margin="524,6,0,4" Click="SpaceIsInsufficientWarn_Click" HorizontalAlignment="Left" Width="36">
                                            <hc:AdornerElement.Instance>
                                                <hc:Poptip Content="当录制的盘符剩余空间低于百分之5时，会每5分钟弹出一次提示，警告剩余空间不足" PlacementType="BottomLeft"/>
                                            </hc:AdornerElement.Instance>
                                        </ToggleButton>
                                        <TextBlock HorizontalAlignment="Left" Margin="573,0,0,0" Text="使用系统代理" Style="{StaticResource TextBlockSubTitle}"/>
