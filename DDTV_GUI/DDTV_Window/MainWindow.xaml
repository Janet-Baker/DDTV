<hc:GlowWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:DDTV_GUI"
        x:Class="DDTV_GUI.DDTV_Window.MainWindow"
        mc:Ignorable="d"
        ActiveGlowColor="#00a1d6"
        InactiveGlowColor="#fb7299"
        Title="MainWindow" Width="1000" Height="563"
        Icon="/Resources/Img/UI/DDTV.ico"
        Background="Transparent" MinWidth="1000" MinHeight="563" Closing="GlowWindow_Closing" StateChanged="GlowWindow_StateChanged" SizeChanged="GlowWindow_SizeChanged" MaxHeight="563" MaxWidth="1000" ResizeMode="CanMinimize">

    <Grid Background="White">
        <hc:NotifyIcon x:Name="DDTV_ICO" Text=" " IsBlink="False" Visibility="Visible" Icon="/Resources/Img/UI/DDTV.ico" MouseDoubleClick="DDTV_ICO_MouseDoubleClick">
            <hc:NotifyIcon.ContextMenu>
                <ContextMenu  Width="150">
                    <MenuItem Header="退出" Click="ICO_MenuItem_EXIT_Click">
                        <MenuItem.Icon>
                            <Image Source="/Resources/Img/UI/View.png" Width="18" Height="18"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ContextMenu>
            </hc:NotifyIcon.ContextMenu>
        </hc:NotifyIcon>
        <Grid x:Name="BackGroundGrid" MouseLeftButtonDown="GlowWindow_MouseLeftButtonDown">
            <Image x:Name="BackGroundImage" Source="/Resources/Img/UI/BackGround.jpg" Opacity="0.2" Margin="0,0,-4,0" Stretch="UniformToFill" />
        </Grid>
        <Grid x:Name="TestGrid" Visibility="Collapsed">
            <ToggleButton Content="Left" IsChecked="{Binding IsOpen, ElementName=About}" Height="60" Width="82"/>
            <Button Command="{Binding InfoGlobalCmd}" Content="测试提示功能" Margin="478,154,0,0" Style="{StaticResource ButtonPrimary}" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click" Height="56" Width="168"/>
        </Grid>
        <Grid x:Name="DrawerGrid">
            <hc:Drawer x:Name="About" Dock="Left" ShowMode="Push">
                <Border Background="{DynamicResource RegionBrush}" Width="300" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Margin="10,0,0,0" Text="关于DDTV" Style="{StaticResource TextBlockTitle}" HorizontalAlignment="Left"/>
                        <Button Command="hc:ControlCommands.Close" Grid.Row="0" HorizontalAlignment="Right" Foreground="{DynamicResource PrimaryTextBrush}" Style="{StaticResource ButtonIcon}" hc:IconElement.Geometry="{StaticResource DeleteFillCircleGeometry}"/>
                    </Grid>
                </Border>
            </hc:Drawer>
        </Grid>
        <Grid x:Name="SideMenuGrid" Width="120" HorizontalAlignment="Left">
            <hc:SideMenu BorderThickness="1" SelectionChanged="SideMenu_SelectionChanged" Background="#99FFFFFF" BorderBrush="#7FE0E0E0" >
                <hc:Interaction.Triggers>
                    <hc:EventTrigger EventName="SelectionChanged">
                        <hc:EventToCommand Command="{Binding SwitchItemCmd}" PassEventArgsToCommand="True" />
                    </hc:EventTrigger>
                </hc:Interaction.Triggers>
                <hc:SideMenuItem Header="首页" Background="#99FFFFFF">
                    <hc:SideMenuItem.Icon>
                        <Image Source="/Resources/Img/UI/home.png" Width="24" Height="24"/>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem Header="监控列表">
                    <hc:SideMenuItem.Icon>
                        <Image Source="/Resources/Img/UI/unordered-list.png" Width="24" Height="24"/>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem Header="录制任务">
                    <hc:SideMenuItem.Icon>
                        <Image Source="/Resources/Img/UI/cloud-download.png" Width="24" Height="24"/>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem Header="完成记录">
                    <hc:SideMenuItem.Icon>
                        <Image Source="/Resources/Img/UI/reload _ime.png" Width="24" Height="24"/>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem Header="其他功能">
                    <hc:SideMenuItem.Icon>
                        <Image Source="/Resources/Img/UI/indent.png" Width="24" Height="24"/>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem Header="设置">
                    <hc:SideMenuItem.Icon>
                        <Image Source="/Resources/Img/UI/wrench.png" Width="24" Height="24"/>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <hc:SideMenuItem Header="关于">
                    <hc:SideMenuItem.Icon>
                        <Image Source="/Resources/Img/UI/smile.png" Width="24" Height="24"/>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>
                <!--<hc:SideMenuItem Header="开发调试">
                    <hc:SideMenuItem.Icon>
                        <Image Source="/Resources/Img/UI/alert.png" Width="24" Height="24"/>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>-->
                <!--<hc:SideMenuItem Header="新监控列表">
                    <hc:SideMenuItem.Icon>
                        <Image Source="/Resources/Img/UI/alert.png" Width="24" Height="24"/>
                    </hc:SideMenuItem.Icon>
                </hc:SideMenuItem>-->
            </hc:SideMenu>
        </Grid>
        <Grid x:Name="mainWindowGrid" Margin="120,-41,0,0">
            <TabControl x:Name="MainWindowTab" Margin="0,10,0,0" Style="{StaticResource TabControlInLine}" Background="{x:Null}">
                <TabItem Header="首页">
                    <Grid>
                        <!--<Button Content="测试" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Button_Click_2"/>-->
                        <Grid Margin="500,0,0,0" Width="350" Height="480" Background="#59A5A5A5">
                            <TextBlock Name="Notice" Text="" FontSize="16" TextWrapping="Wrap" Margin="10" Foreground="#FF2B2B2B" HorizontalAlignment="Left" Width="330" Height="460" VerticalAlignment="Center" />
                        </Grid>
                        <Grid Margin="10,26,640,383" Background="#59A5A5A5">
                            <TextBlock Margin="10,10,0,0" Text="监控中" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" Height="30" VerticalAlignment="Top" Width="90" HorizontalAlignment="Left" FontSize="26"/>
                            <TextBlock x:Name="MonitoringCount" Margin="0,47,0,23" Text="加载中" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" VerticalAlignment="Stretch" FontSize="50" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                        </Grid>
                        <Grid Margin="10,383,640,26" Background="#59A5A5A5">
                            <TextBlock x:Name="SavePathSize" Margin="10,37,5,50" Text="正在初始化" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" VerticalAlignment="Stretch" FontSize="20" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                            <TextBlock Margin="10,5,0,0" Text="储存盘容量" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" Height="30" VerticalAlignment="Top" Width="149" HorizontalAlignment="Left" FontSize="20"/>
                            <TextBlock x:Name="TmpPathSize" Margin="10,95,5,-19" Text="正在初始化" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" VerticalAlignment="Stretch" FontSize="20" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                            <TextBlock Margin="10,65,0,0" Text="缓存盘容量" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" Height="30" VerticalAlignment="Top" Width="149" HorizontalAlignment="Left" FontSize="20"/>
                        </Grid>
                        <Grid Margin="10,204,640,205" Background="#59A5A5A5">
                            <TextBlock x:Name="RecCount" Margin="0,47,0,23" Text="加载中" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" VerticalAlignment="Stretch" FontSize="50" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                            <TextBlock Margin="10,10,0,0" Text="录制中" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" Height="30" VerticalAlignment="Top" Width="90" HorizontalAlignment="Left" FontSize="26"/>
                        </Grid>
                        <Grid Margin="263,27,387,383" Background="#59A5A5A5">
                            <TextBlock Margin="10,10,0,0" Text="直播中" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" Height="30" VerticalAlignment="Top" Width="90" HorizontalAlignment="Left" FontSize="26"/>
                            <TextBlock x:Name="LiveBroadcastingCount" Margin="0,47,0,22" Text="加载中" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" VerticalAlignment="Stretch" FontSize="50" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                        </Grid>
                        <Grid Margin="263,384,387,26" Background="#59A5A5A5">
                            <TextBlock Margin="10,10,0,0" Text="Powered By" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" Height="40" VerticalAlignment="Top" Width="153" HorizontalAlignment="Left" FontSize="26"/>
                            <Image Margin="53,50,53,15" Source="/Resources/Img/UI/logo1.png" Stretch="Fill"/>
                        </Grid>
                        <Grid Margin="263,205,387,205" Background="#59A5A5A5">
                            <TextBlock x:Name="RecCompleteCount" Margin="0,47,0,22" Text="加载中" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" VerticalAlignment="Stretch" FontSize="50" HorizontalAlignment="Stretch" TextAlignment="Center"/>
                            <TextBlock Margin="10,10,0,0" Text="已录制" Style="{StaticResource TextBlockLargeBold}" Foreground="#00a1d6" Height="30" VerticalAlignment="Top" Width="90" HorizontalAlignment="Left" FontSize="26"/>
                        </Grid>

                    </Grid>
                </TabItem>
                <TabItem Header="监控列表">

                    <Grid>
                        <ListView x:Name="LiveList" Margin="10,10,10,10" Width="auto" Background="#7FEEEEEE" BorderBrush="#7FE0E0E0" d:ItemsSource="{d:SampleData ItemCount=5}" ContextMenuOpening="LiveList_ContextMenuOpening" ContextMenuClosing="LiveList_ContextMenuClosing" MouseDoubleClick="LiveList_Play_MouseDouble_Click" VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling" VirtualizingPanel.ScrollUnit="Item" ScrollViewer.CanContentScroll="True" KeyDown="LiveList_KeyDown" >
